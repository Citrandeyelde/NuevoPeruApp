<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".sierraActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sierra"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Las mesetas o Sierra se extienden de la banda costera hasta 250 Km. dentro de las tierras al norte y 400 Km. al sur. La altitud media es de 3000 metros. Se trata esencialmente de una meseta recortada por valles ingresados y dominada por una de las cadenas montañosas más impresionante del mundo: los Andes." />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/pngtree_machu_picchu_sticker_machu_picchu_sticker_machu_picchu_stickers_clipart_vector_png_image_12234652" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Es una región cuya actividad sísmica es intensa y dónde los terremotos son frecuentes. Aunque se encuentran rastros de actividad volcánica en el conjunto de la sierra, se encuentran volcanes en actividad en su parte meridional." />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/e7fe242d1d72437144458dda1e8a3eab_llama_animal_stands" />

            <Button
                android:id="@+id/volver1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volver" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>